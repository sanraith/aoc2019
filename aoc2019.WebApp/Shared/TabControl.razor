@* Tab buttons *@
<div>
    @foreach (var page in Pages)
    {
        var outlineClass = ActivePage == page ? "btn-secondary" : "btn-outline-secondary";
        <button class="btn @outlineClass" @onclick="() => ActivatePage(page)">@(page.Name)</button>
    }
</div>

@* Active page content *@
<div>
    @ActivePage?.ChildContent
</div>

@* Child content (TabPages) is not displayed directly, but it still have to be included to use CascadingValue. *@
<div style="display: none">
    <CascadingValue Name="Parent" Value="this">
        @ChildContent
    </CascadingValue>
</div>
